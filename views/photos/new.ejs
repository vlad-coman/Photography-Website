<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
<% include ../partials/body %>
<% include ../partials/navbar %>

<section id="form_container" class="content-section">
   <div class="contact-section">
      <div class="container">
         <div class="row">
            <div class="col-md-8 col-md-offset-2">
               <form class="form-horizontal" action="/photos" method="POST" enctype="multipart/form-data">
                  <div class="form-group color ">
                     <label id="newPhoto" for="photo">Image</label>
                     <input class="form-control" type="file" id="photo" name="image" placeholder="photo" accept="image/*" required>
                  </div>
                  <div class="form-group color">
                     <label id="category"  for="category">Category</label>
                     <select class="form-control ui fluid selection dropdown" name="photo[category]" required="required">
                        <option value="" disabled selected>Choose Category</option>
                        <option value="landscapes">Landscapes</option>
                        <option value="animals">Animals</option>
                        <option value="macros">Macros</option>
                     </select>
                  </div>
                  <div class="form-group color">
                     <button type="submit" class="btn btn-success">Upload Photo</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</section>

<% include ../partials/footer %>
